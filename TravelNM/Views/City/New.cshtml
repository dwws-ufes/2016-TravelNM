@model Model.City

@{
    ViewBag.Title = Resources.City.NewCity;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section css
{
}

<div id="page-wrapper">
    <div class="row">
        <!-- page header -->
        <div class="col-lg-12">
            <h1 class="page-header">@Resources.City.NewCity</h1>
        </div>
        <!--end page header -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Elements -->
            <div class="panel panel-default">
                <div class="panel-heading">
                   @Resources.City.EnterYourInformationBelow
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                        @using (Html.BeginForm("Create", "City", FormMethod.Post, new { @id = "form_City" }))
                            {
                                @Html.Partial("_Form", Model);
                                <button type="submit" class="btn btn-primary">@Resources.City.Create</button>
                            }
                        </div>
                       
                    </div>
                </div>
            </div>
            <!-- End Form Elements -->
        </div>
    </div>
</div>

