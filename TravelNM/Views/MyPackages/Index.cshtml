@model List<Model.TravelPackageBuy>

@{
    ViewBag.Title = Resources.MyPackages.Title;
    Layout = "~/Views/Shared/_LayoutAdminCustomer.cshtml";
}

@section css
{
    <link href="~/assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
}

<div id="page-wrapper">

    <div class="row">
        <!--  page header -->
        <div class="col-lg-12">
            <h1 class="page-header">@Resources.MyPackages.Title</h1>
        </div>
        <!-- end  page header -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>@Resources.MyPackages.Instruction</h3> 
                </div>
                <div class="panel-body">
                    <div class="table-responsive table-striped">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>@Resources.MyPackages.CityOrigin</th>
                                    <th>@Resources.MyPackages.CityDestination</th>
                                    <th>@Resources.MyPackages.Priece</th>
                                    <th>@Resources.MyPackages.Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Model.TravelPackageBuy travel in Model)
                                {
                                    <tr>
                                        <td>@travel.Id</td>
                                        <td>@travel.TravelPackage.CityOrigin.Name</td>
                                        <td>@travel.TravelPackage.CityDestination.Name</td>
                                        <td>@travel.TravelPackage.Priece</td>
                                        <td class="center">
                                            @switch (travel.Status)
                                            {
                                                case 1: @Resources.MyPackages.Status1
                                                    break;
                                                case 2: @Resources.MyPackages.Status2
                                                    break;
                                                case 3: @Resources.MyPackages.Status3
                                                    break;
                                            }   
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>



</div>


