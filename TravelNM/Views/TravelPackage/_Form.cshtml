@model TravelNM.Models.TravelPackageView

@Html.AntiForgeryToken()
@Html.ValidationSummary(true)

<div class="form-group">
    <font id="msgSameCities" color="red">@Resources.TravelPackage.SameCities</font>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.TravelPackage.CityOrigin.Id, Resources.TravelPackage.CityOrigin)
    @Html.DropDownListFor(model => model.TravelPackage.CityOrigin.Id, new SelectList((from c in Model.Cities.ToList()
                                                                                       select new
                                                                                       {
                                                                                           Value = c.Id,
                                                                                           Text = c.Name + "/ " + c.State
                                                                                       }), "Value", "Text"),
    new { @class = "form-control", @required = true })
</div>
<div class="form-group">
    @Html.LabelFor(model => model.TravelPackage.CityDestination.Id, Resources.TravelPackage.CityDestination)
    @Html.DropDownListFor(model => model.TravelPackage.CityDestination.Id, new SelectList((from c in Model.Cities.ToList()
                                                                                            select new
                                                                                            {
                                                                                                Value = c.Id,
                                                                                                Text = c.Name + "/ " + c.State
                                                                                            }), "Value", "Text"),
new
{
    @class = "form-control",
    @required = true,
    @onchange = "SearchCitySparql()"
})
</div>
<div class="form-group">
    @Html.LabelFor(model => model.TravelPackage.Priece, Resources.TravelPackage.Priece)
    @Html.TextBoxFor(model => model.TravelPackage.Priece, new { @class = "form-control", @required = true })
</div>

<div class="form-group">
    @Html.LabelFor(model => model.TravelPackage.Description, Resources.TravelPackage.Description)
    @Html.TextAreaFor(model => model.TravelPackage.Description, new { @class = "form-control", @required = true, cols = 25, @rows = 5 })
</div>


