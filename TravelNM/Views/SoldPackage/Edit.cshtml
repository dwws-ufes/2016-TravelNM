@model TravelNM.Models.TravelPackageBuyView

@{
    ViewBag.Title = Resources.SoldPackage.Edit;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section css
{
}

<div id="page-wrapper">
    <div class="row">
        <!-- page header -->
        <div class="col-lg-12">
            <h1 class="page-header">@Resources.SoldPackage.Edit</h1>
        </div>
        <!--end page header -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Elements -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Resources.SoldPackage.EnterYourInformationBelow
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("Update", "SoldPackage", FormMethod.Post, new { @id = "form_soldpackage" }))
                            {
                                @Html.HiddenFor(model => model.TravelPackageBuy.Id)

                                @Html.Partial("_Form", Model);
                                <button type="submit" class="btn btn-primary">@Resources.Global.Update</button>
                            }
                        </div>

                    </div>
                </div>
            </div>
            <!-- End Form Elements -->
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#Status").val("@Model.TravelPackageBuy.Status");
        });
    </script>
}


