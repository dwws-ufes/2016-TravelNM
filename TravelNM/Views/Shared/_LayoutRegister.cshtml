@{
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
}

@helper selected(string c, string culture)
{
    if (c == culture)
    {
        <i class="fa fa-location-arrow"></i>
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/assets/plugins/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/assets/plugins/pace/pace-theme-big-counter.css" rel="stylesheet" />
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <link href="~/assets/css/main-style.css" rel="stylesheet" />
    @RenderSection("css", required: false)
</head>
<body>
    <!--  wrapper -->
    <div id="wrapper">
        <!-- navbar top -->
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation" id="navbar">
            <!-- navbar-header -->
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <h2 style="color:#ffffff">TRAVEL MN</h2>
                </a>
            </div>
            <ul class="nav navbar-top-links navbar-right">
                <!-- main dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-location-arrow fa-3x"></i>
                    </a>
                    <!-- dropdown tasks -->
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="@Url.Action("SetCulture", "Authentication", new { culture = "pt-br" })">
                                Português @selected("pt-br", culture)
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("SetCulture", "Authentication", new { culture = "en-us" })">
                                English @selected("en-us", culture)
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        @RenderBody()
    </div>
    <!-- end wrapper -->
    <!-- Core Scripts - Include with every page -->
    <script src="~/assets/plugins/jquery-1.10.2.js"></script>
    <script src="~/assets/plugins/bootstrap/bootstrap.min.js"></script>
    <script src="~/assets/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/assets/plugins/pace/pace.js"></script>
    <script src="~/assets/scripts/siminta.js"></script>

    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
