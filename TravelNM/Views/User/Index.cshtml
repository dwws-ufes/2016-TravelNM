@model List<Model.User>

@{
    ViewBag.Title = Resources.User.Users;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section css
{
    <link href="~/assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
}

<div id="page-wrapper">

    <div class="row">
        <!--  page header -->
        <div class="col-lg-12">
            <h1 class="page-header">@Resources.User.Users</h1>
        </div>
        <!-- end  page header -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href="@Url.Action("New", "User")" class="btn btn-info" aria-label="Left Align">
                        @Resources.User.NewUser
                    </a>
                </div>
                <div class="panel-body">
                    <div class="table-responsive table-striped">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>@Resources.User.Id</th>
                                    <th>@Resources.User.Name</th>
                                    <th>@Resources.User.Email</th>
                                    <th>-</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Model.User user in Model)
                                {
                                    <tr>
                                        <td>@user.Id</td>
                                        <td>@user.Name</td>
                                        <td>@user.Email</td>
                                        <td class="center"><button>x</button></td>
                                    </tr>
                                }
                                
                                </tbody>
</table>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>
    
    
    
</div>


@section scripts {
 <!-- Page-Level Plugin Scripts-->
<script src="~/assets/plugins/dataTables/jquery.dataTables.js"></script>
<script src="~/assets/plugins/dataTables/dataTables.bootstrap.js"></script>
<script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable({
                "language": {
                    "url": "@Resources.Global.DATA_TABLE_JSON"
                }
            });
        });

        
</script>
}