@model Model.User

@Html.AntiForgeryToken()
@Html.ValidationSummary(true)

<div class="form-group">
    @Html.LabelFor(model => model.Name, Resources.User.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = true })
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Email, Resources.User.Email)
    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @required = true, @type = "email" })
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Password, Resources.User.Password)
    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @required = true, @type = "password" })

</div>
