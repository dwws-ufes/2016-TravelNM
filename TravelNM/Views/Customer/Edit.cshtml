@model TravelNM.Models.CustomerView

@{
    ViewBag.Title = Resources.Customer.Edit;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section css
{
}

<div id="page-wrapper">
    <div class="row">
        <!-- page header -->
        <div class="col-lg-12">
            <h1 class="page-header">@Resources.Customer.Edit</h1>
        </div>
        <!--end page header -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Elements -->
            <div class="panel panel-default">
                <div class="panel-heading">
                   @Resources.Customer.EnterYourInformationBelow
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                        @using (Html.BeginForm("Update", "Customer", FormMethod.Post, new { @id = "form_customer" }))
                        {
                            @Html.HiddenFor(model => Model.Customer.Id)

                            @Html.Partial("_Form", Model);
                            <button type="submit" class="btn btn-primary">@Resources.Global.Update</button>
                        }
                        </div>                    
                    </div>
                </div>
            </div>
            <!-- End Form Elements -->
        </div>
    </div>
</div>


@section scripts {
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    <script src="~/Scripts/jquery-maskmoney.js"></script>
    <script>
        jQuery(function ($) {
            $("#Customer_DateBirth").mask("9999-99-99");
        });
    </script>

    <script>
        $(document).ready(function () {
            $("#Status").val("@Model.Customer.Status");
        });
    </script>
}
