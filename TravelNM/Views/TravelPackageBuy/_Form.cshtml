@model TravelNM.Models.TravelPackageBuyView

@Html.AntiForgeryToken()
@Html.ValidationSummary(true)

<div class="form-group"> 
    @Html.LabelFor(model => model.TravelPackageBuy.Customer.Id, Resources.SoldPackage.Customer)
    @Html.DropDownListFor(model => model.TravelPackageBuy.Customer.Id, new SelectList(Model.Customers, "Id", "Name"), new { @class = "form-control", @required = true })
</div>

<div class="form-group">
    @Html.LabelFor(model => model.TravelPackageBuy.TravelPackage.Id, Resources.SoldPackage.CityOrigin + " X " + Resources.SoldPackage.CityDestination)
    @Html.DropDownListFor(model => model.TravelPackageBuy.TravelPackage.Id, new SelectList((from t in Model.TravelPackage.ToList()
                        select new
                        {
                            Value = t.Id,
                            Text = t.CityOrigin.Name + "/ " + t.CityOrigin.State + " X " + t.CityDestination.Name + "/ " + t.CityDestination.State + " - $ " + t.Priece
                        }), "Value", "Text"),
    new { @class = "form-control", @required = true })
</div>

<div class="form-group">
    @Html.LabelFor(model => model.TravelPackageBuy.Status, Resources.SoldPackage.Status)

    <select id="Status" name="Status"  required="required" class="form-control">
        <option value="1">@Resources.SoldPackage.Status1</option>
        <option value="2">@Resources.SoldPackage.Status2</option>
        <option value="3">@Resources.SoldPackage.Status3</option>
    </select>
</div>

