@model Model.TravelPackageBuy

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdminCustomer.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <!-- page header -->
        <div class="col-lg-12">
            <h1 class="page-header">@Resources.MyPackage.Title</h1>
        </div>
        <!--end page header -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Elements -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Resources.MyPackage.SeePackage
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="panel-body">
                                <div>
                                    <h4>
                                        <b>@Resources.MyPackage.CityOrigin:</b>
                                        @Html.DisplayFor(model => model.TravelPackage.CityOrigin.Name)
                                        / @Html.DisplayFor(model => model.TravelPackage.CityOrigin.State)
                                    </h4>
                                </div>

                                <div>
                                    <h4>
                                        <b>@Resources.MyPackage.CityDestination:</b>
                                        @Html.DisplayFor(model => model.TravelPackage.CityDestination.Name) /
                                        @Html.DisplayFor(model => model.TravelPackage.CityDestination.State)
                                    </h4>
                                </div>

                                <div>
                                    <h4>
                                        <b>@Resources.MyPackage.DateBuy:</b>
                                        @Html.DisplayFor(model => model.DateBuy)
                                    </h4>
                                </div>

                                <div>
                                    <h4>
                                        <b>@Resources.MyPackage.Status: </b>
                                        @Html.DisplayFor(model => model.Status) - 

                                        @switch (Model.Status)
                                        {
                                            case 0: @Resources.MyPackage.Status
                                                break;
                                            case 1: @Resources.MyPackage.Status1
                                                break;
                                            case 2: @Resources.MyPackage.Status2
                                                break;
                                            case 3: @Resources.MyPackage.Status3
                                                break;
                                        }
                                    </h4>
                                </div>

                                <div>
                                    <h4>
                                        <b>@Resources.MyPackage.Priece:</b>
                                        @Html.DisplayFor(model => model.TravelPackage.Priece)
                                    </h4>
                                </div>
                                <br />
                                <div>
                                    <h4>
                                        <b>@Resources.MyPackage.Description:</b>
                                        @Html.DisplayFor(model => model.TravelPackage.Description)
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End Form Elements -->
            </div>
        </div>
    </div>
</div>

